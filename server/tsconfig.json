{
    "compilerOptions": {
      "target": "ES2022",
      "module": "NodeNext",
      "moduleResolution": "NodeNext",
      "esModuleInterop": true,
      "allowJs": true,
      "strict": true,
      "skipLibCheck": true,
      "outDir": "./dist",
      "rootDir": "./src",
      "typeRoots": ["./types", "./node_modules/@types"],
      "types": ["node", "express"]
      
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules", "dist"]
  }
  